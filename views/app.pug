extends layout/main

include components/navbar
include components/header
include components/footer
include shards/blankSection
include shards/buttonDefault
include shards/imageSection
include shards/imageSectionCenterialized
include shards/textSection
include shards/textSectionCenterialized

block content
  +navbar(config.service.name, 'app')
  +blankSection('45')

  article
    div.container
      center
        img.block(src='https://avatars0.githubusercontent.com/u/53952246')

  +textSectionCenterialized(
    '게스트 세션',
    '게스트 세션에서는 플레이 정보가 유지되지 않습니다.'
  )

  article
    div.container
      table
        thead
          th 게임
          th 플레이어
          th 참가
        tbody
          each game in games
            tr
              td= game.name
              td= game.join
              td
                a(href='/app/' + game.id) 참가
          else
            tr
              td 현재 참가할 수 있는 게임이 없습니다
              td &ndash;
              td &ndash;

  +footer()
